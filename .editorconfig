# EditorConfig để đảm bảo consistency across editors
# Đọc thêm tại: https://editorconfig.org

root = true

# Mặc định cho tất cả files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Django HTML Templates - KHÔNG FORMAT TỰ ĐỘNG
[templates/**/*.html]
indent_style = space
indent_size = 2
# Không được auto-format để tránh gộp Django template tags
max_line_length = off

# JavaScript/TypeScript
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2

# CSS/SCSS
[*.{css,scss}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# Makefile
[Makefile]
indent_style = tab
