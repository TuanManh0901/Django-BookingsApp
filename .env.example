# Thêm vào file .env

# OpenWeather API Key (get from https://openweathermap.org/api)
OPENWEATHER_API_KEY=

# Google Maps API Key
GOOGLE_MAPS_API_KEY=

# ==================================================
# EMAIL CONFIGURATION - Gmail SMTP
# ==================================================
# Your Gmail address
EMAIL_HOST_USER=your-email@gmail.com

# Gmail App Password (NOT your regular Gmail password!)
# See setup guide: https://support.google.com/accounts/answer/185833
EMAIL_HOST_PASSWORD=your-16-character-app-password

# Email settings (optional, defaults shown)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=VN Travel <your-email@gmail.com>
